                        <Frame.Margin>
                            <OnIdiom x:TypeArguments="Thickness" Phone="16" Tablet="16,32,32,32"/>
                        </Frame.Margin>
                        <Image Margin="0,0,0,0"
                               Source="{Binding ImageSource}"
