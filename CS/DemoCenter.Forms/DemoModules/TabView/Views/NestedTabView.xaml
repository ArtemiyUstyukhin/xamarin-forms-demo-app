                                    </demo:IconView.HeightRequest>
                                    <demo:IconView.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ChangeWishList}"/>
                                    </demo:IconView.GestureRecognizers>
                                </demo:IconView>
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Grid>
